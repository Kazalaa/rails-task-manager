<div class="container">
  <h1>My tasks</h1>
  <div>
    <% @tasks.each do |task| %>
        <% if task.completed == true %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %> <br>
    <% end %>
  </div>
  <%= link_to "Add a new task", new_task_path %>
</div>
